{
  "name": "react-use-storage",
  "version": "0.0.1-alpha.2",
  "description": "React Hook for saving objects to Local/Session/Cookie storage",
  "keywords": [
    "react",
    "hooks",
    "localStorage",
    "sessionStorage",
    "cookie"
  ],
  "author": "dance2die <sungmkim80@gmail.com>",
  "homepage": "https://github.com/dance2die/react-use-localstorage/packages/react-use-storage",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run prepare",
    "clean": "rimraf lib",
    "build": " run-s clean build:*",
    "build:src": "tsc",
    "build:uglify": "uglifyjs lib/index.js -o lib/index.js -c --keep-fnames -m",
    "prepare": "run-s clean build",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.4",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-localstorage-mock": "^2.4.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-hooks-testing-library": "^0.3.7",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333",
    "uglify-js": "^3.4.9"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dance2die/react-use-localstorage.git"
  },
  "bugs": {
    "url": "https://github.com/dance2die/react-use-localstorage/issues"
  }
}
